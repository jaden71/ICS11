import java.util.Scanner;
public class Asdasd {
  
  
  public static void main(String[] args) { 
    Scanner input = new Scanner(System.in);
    int counter = 0;
    int current = -1;
    int previous = 0;
    current = input.nextInt();
    if (current == -1)
      counter--;
    while (current != 0)
    {
      previous = current;
      current = input.nextInt();
      
      if (previous == current)
        counter++;
    }
     System.out.println(counter);
  }
 
  
}
